<mvc:View controllerName="com.training.exer1josephraymundo.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" floatingFooter="true">
        <VBox id="idVBox" class="sapUiSmallMargin">
            <f:SimpleForm id="idSimpleForm" editable="true" layout="ResponsiveGridLayout" title="Details" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                    <Input id="idInptFName" value="" />
                    <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                    <Input id="idInptLName" value="" />
                    <Label id="idLblMOP" text="{i18n>mopLbl}" />
                    <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                        <items>
                            <core:Item id="idItmCOD" text="{i18n>codItm}" key="COD"/>
                            <core:Item id="idItmCC" text="{i18n>ccItm}" key="CC"/>
                            <core:Item id="idItmGCash" text="{i18n>gcashItm}" key="GCASH"/>
                        </items>
                    </Select>
                    <Label id="idLblPhone" text="{i18n>mobileNumberLbl}" visible="false"/>
                    <Input id="idInputPhone" value="" visible="false"/>
                    <Label id="idLblCcNum" text="{i18n>ccNumLbl}" visible="false"/>
                    <Input id="idInputCcNum" value="" visible="false"/>
                </f:content>
            </f:SimpleForm>
        </VBox>
        <Table id="idTableSCart" inset="false">
                    <headerToolbar>
                        <OverflowToolbar id="idOFT">
                            <content>
                                <Title id="idTableTitleSCart" text="{i18n>shoppingCartLbl}"/>
                                <ToolbarSpacer id="idTSpacer"/>
                                <Button id="idBtnAddItems" icon="sap-icon://cart-4" tooltip="Add to Cart" press="onAddItem"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="idCol1">
                            <Text id="idColText1" text="{i18n>itemCol}" />
                        </Column>
                        <Column id="idCol2">
                            <Text id="idColText2" text="{i18n>qtyCol}" />
                        </Column>
                        <Column id="idCol3">
                            <Text id="idColText3" text="{i18n>priceCol}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="idColListItem1" vAlign="Middle">
                            <cells>
                                <Text id="idText1" text="{i18n>id1Itm}" />
                                <Text id="idText2" text="{i18n>id2Itm}" />
                                <Text id="idText3" text="{i18n>id3Itm}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem id="idColListItem2" vAlign="Middle">
                            <cells>
                                <Text id="idText4" text="{i18n>id4Itm}" />
                                <Text id="idText5" text="{i18n>id5Itm}" />
                                <Text id="idText6" text="{i18n>id6Itm}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter"/>
                <Button id="idBtnCheckout" text="{i18n>checkOutTip}" tooltip="{i18n>checkOutTip}" press="onPressCheckout"/>
            </OverflowToolbar>
        </footer>

    </Page>
</mvc:View>